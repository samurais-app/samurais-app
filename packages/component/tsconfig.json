{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "DOM"
    ],
    "paths": {
      "src/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "__tests__/*.ts",
    "__tests__/**/*.ts",
    "__tests__/*.tsx",
    "__tests__/**/*.tsx",
    "src/*.ts",
    "src/**/*.ts",
    "src/*.tsx",
    "src/**/*.tsx"
  ]
}